{
  "variables": {
    "aws_access_key":                        
    "aws_secret_key":                                            
  },
  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "eu-west-1",
    "source_ami": "ami-0e12cbde3e77cbb98",
    "instance_type": "t2.micro",
    "ssh_username": "ec2-user",
    "ami_name": "zoo-{{timestamp}}"
    }],
    "provisioners": [
        {
         "type": "file", 
         "source": "zookeeper.service",
         "destination": "/tmp/zookeeper.service"
        },
        {
	"type": "shell",
        "inline": [
	"sudo cp /tmp/zookeeper.service /etc/systemd/system"]
	},
        {
       "type": "shell",
       "script": "zoo.sh"
       },
       {
       "type": "shell",
       "script": "solr.sh"
       }
  ]
}
